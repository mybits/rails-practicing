.post--full-size
  %h2
    = post.title
    %small
      = post.friendly_date
  = link_to "edit", edit_post_path(post), class: 'post__button--edit'

  .post__body
    = post.body
  .post__tags-list.tagsinput
    - post.tags_array.each do |tag|
      = content_tag :span, tag, class: 'tag'

  %br
  %br
  %hr
  %h4 Comments:
  = render 'comments/comment' 

  %br
  %h4 Add a comment:
  = render 'comments/form'
